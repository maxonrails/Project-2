<%= form_for @post do |f| %>

<div>
     <%= f.label :title %>
     <%= f.text_field :title %>
</div>

<div>
    <%= f.label :body %>
    <%= f.text_field :body %>
</div>
<%= f.collection_check_boxes :item_ids, Item.all, :id, :name %>

 <%= f.submit "Add new post" %>
<% end %>

<%= link_to "Back to the list!", posts_path %>