<!DOCTYPE html>

<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Project 2</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class='col-md-12 userbar'>
<% if current_user %>
	<%= link_to current_user.username, user_path(current_user) %>
	<%= image_tag current_user.image.url(:small) %>
	<%= current_user.posts.count %> Posts
	<%= link_to "Log out", logout_path, method: :delete,class: 'btn btn-danger btn-xs' %>
<% else %>
	<%= form_for(:session, url:login_path) do |f| %>
		<%=f.label :username %>
		<%=f.text_field :username %>
		<%=f.label :password %>
		<%=f.password_field :password %>
		<%=f.submit "Log in",class: 'btn btn-info btn-xs'  %>
		<%= link_to "Sign-up", users_new_path, class: 'btn btn-warning btn-xs' %>
	<%end%>
<% end %>
</div>
<br><br><hr>
	<%= yield %>

<hr>
<%= params %>
<hr>
</body>
</html>
