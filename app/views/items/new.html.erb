<%= form_for @item do |f| %>

<div>
     <%= f.label :name %>
     <%= f.text_field :name %>
</div>

<div>
    <%= f.label :category %>
    <%= f.text_field :category %>
</div>

<div>
     <%= f.label :price %>
	 <%= f.number_field :price %>
</div>


 <%= f.submit "Add new post" %>
<% end %>

